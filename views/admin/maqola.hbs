
<div class="d-flex">
    {{#if maqola.length}}
    {{#each maqola}}
    <div class="col-lg-2">
        <div class="card text-center" style="height: 200px; padding: 35px">
            <div class="card-title">
                <div class="box">
                    <h4>{{maqolaTitle}}</h4>
                    <p>{{maqolaText}}</p>
                    <img src="/images/{{img}}" alt="png">
                </div>
                <div class="box">                          
                    <a href="/admin/maqola/delete/{{id}}" class="btn btn-danger">O'chirish</a>
                    <a href="/admin/maqola/edit/{{id}}" class="btn btn-warning">O'zgartirish</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{/if}}
</div>