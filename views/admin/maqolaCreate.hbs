<form action="/admin/maqola/add" method="POST" enctype="multipart/form-data">
  <div class="card-body">
    <div class="form-group">
      <label for="maqolaTitle">Maqola sarlavha</label>
      <input type="text" class="form-control" name="maqolaTitle" id="maqolaTitle" />
    </div>
    <div class="form-group">
      <label for="maqolaText">Maqola</label>
      <input type="text" class="form-control" name="maqolaText" id="maqolaText" />
    </div>
    <div class="img">
      <label for="img">Maqola rasmi</label>
      <input type="file" class="form-control" name="img" id="img" />
    </div>
    <div class="form-group">
      <label for="{{categoryId}}">Maqola kategoriyasi</label>
      <select  class="form-control" name="categoryId" id="categoryId">
        {{#each categories}}
        <option id="{{id}}" value="{{id}}">{{categoryTitle}}</option>  
        {{/each}}
      </select>
    </div>
  </div>
  <div class="card-footer">
    <button class="btn btn-primary" type="submit">Yaratish</button>
  </div>
</form>