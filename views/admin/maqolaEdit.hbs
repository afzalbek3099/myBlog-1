<form action="/admin/maqola/edit/{{maqola.id}}" method="POST" enctype="multipart/form-data">
    <div class="card-body">
        <div class="form-group">
            <label for="maqolaTitle">Maqola sarlavha</label>
            <input type="text" class="form-control" name="maqolaTitle" id="maqolaTitle"
                value="{{maqola.maqolaTitle}}" />
        </div>
        <div class="form-group">
            <label for="maqolaText">Maqola</label>
            <input type="text" class="form-control" name="maqolaText" id="maqolaText" value="{{maqola.maqolaText}}" />
        </div>
        <div class="img">
            <label for="img">Maqola rasmi</label>
            <input type="file" class="form-control" name="img" id="img" id="maqolaText" value="{{maqola.img}}" />
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">O'zgartirish</button>
    </div>
</form>